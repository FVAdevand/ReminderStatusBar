<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="alertDialogTheme">@style/AppAlertDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetDialogStyle</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppBottomSheetDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_top_corner_background</item>
    </style>

    <style name="AppAlertDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/round_all_corner_background</item>
    </style>

    <style name="editReminderImageButtonStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="AppChip.Entry" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/colorChipStroke</item>
        <item name="chipBackgroundColor">@android:color/transparent</item>
        <item name="android:checkable">false</item>
        <item name="android:clickable">false</item>
    </style>

</resources>