<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="android:statusBarColor">@color/colorWindowBackground</item>
        <item name="android:windowLightStatusBar">@bool/lightStatusBar</item>
        <item name="android:listDivider">@drawable/list_divider</item>
        <item name="android:datePickerDialogTheme">@style/AppTimeDateDialogTheme</item>
        <item name="android:timePickerDialogTheme">@style/AppTimeDateDialogTheme</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
        <item name="alertDialogTheme">@style/AppAlertDialogTheme</item>
    </style>

    <style name="AppBottomSheetDialogTheme" parent="ThemeOverlay.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppBottomSheetDialogStyle</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppBottomSheetDialogStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/round_top_corner_background</item>
    </style>

    <style name="AppAlertDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:windowBackground">@drawable/round_all_corner_background</item>
        <item name="buttonBarPositiveButtonStyle">@style/AppDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/AppDialogButtonStyle</item>
    </style>

    <style name="AppTimeDateDialogTheme" parent="@style/ThemeOverlay.MaterialComponents.Dialog">
        <item name="materialButtonStyle">@style/AppDialogButtonStyle</item>
    </style>

    <style name="AppDialogButtonStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="editReminderImageButtonStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="AppChip.Entry" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipStrokeColor">@color/colorChipStroke</item>
        <item name="chipBackgroundColor">@color/colorBottomSheetBackground</item>
        <item name="chipIconTint">@color/colorActiveElement</item>
        <item name="android:textColor">@color/colorActiveElement</item>
        <item name="android:checkable">false</item>
        <item name="android:clickable">false</item>
    </style>

    <style name="DialogItemTitleStyle">
        <item name="android:drawablePadding">@dimen/drawable_padding</item>
        <item name="android:drawableTint">@color/colorInactiveElement</item>
        <item name="android:paddingStart">@dimen/padding_edge_dialog_item</item>
        <item name="android:paddingEnd">@dimen/padding_edge_dialog_item</item>
        <item name="android:textColor">@color/colorInactiveElement</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DialogItemValueStyle">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingStart">@dimen/padding_edge_dialog_item</item>
        <item name="android:paddingEnd">@dimen/padding_edge_dialog_item</item>
        <item name="android:paddingTop">@dimen/padding_top_bottom_dialog_item_value</item>
        <item name="android:paddingBottom">@dimen/padding_top_bottom_dialog_item_value</item>
        <item name="android:textColor">@color/colorActiveElement</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>